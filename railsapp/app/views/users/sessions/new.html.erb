   <%= stylesheet_link_tag "form-login.css" %>
    <div class="container-fluid">
        <div class="row pt-1 out-card pb-5">
            <div class="col-lg-4 col-md-4 col-sm-4 col-12 p-0"></div>
            <div class="mid-col col-lg-4 col-md-4 col-sm-4 col-12 p-0 pb-4">
                <div class="col-lg-12 col-12">
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                            <div class="div_title">
                                <a>Fotobook Login</a>
                            </div>
                            <div class="card mt-1 card-logo  ">
                                <div class="card-body card_body_logo">
                                    <div class="div_logo">
                                        <%= image_tag("logo_google.png", :alt => "google" , class:"img_logo float-left") %>
                                        <%= image_tag("logo_face.png", :alt => "Facebook" , class:"img_logo") %>
                                        <%= image_tag("logo_twitte.png", :alt => "Twitte" , class:"img_logo float-right") %>
                                    </div>
                                </div>
                            </div>
                            <div class="mt-3 card content-card-form">
                                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                                    <div class="div_logo mt-4">
                                        <%= image_tag("logo_profile.png", :alt => "Avatar" ) %>
                                    </div>
                                    <div class="form-group mt-2">
                                        <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control",placeholder:"Email" %>
                                        <%= f.password_field :password, autocomplete: "current-password",class:"form-control", placeholder:"Password" %>
                                    </div>
                                    <div class="text-center">   
                                        <%= f.submit "Log in", class:"btn btn-primary " %>
                                    </div>
                                    <div class="mt-3 text-center">
                                        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                                            <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
                                        <% end %>
                                    </div>
                                    
                                <% end %>
                            </div>
                            <div class="mt-3 text-center">
                                <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
                                    <%= link_to "Create account", new_registration_path(resource_name) %><br />
                                <% end %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-4 col-12 p-0"></div>
        </div>
    </div>