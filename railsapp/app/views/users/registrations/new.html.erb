<div class="container-fluid">
    <div class="row pt-1 out-card pb-5">
        <div class="col-lg-4 col-md-4 col-sm-4 col-12 p-0"></div>
        <div class="mid-col col-lg-4 col-md-4 col-sm-4 col-12 p-0 pb-4">
            <div class="col-lg-12 col-12">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                        <div class="div_title">
                            <a>Fotobook Signup</a>
                        </div>
                        <div class="card mt-1 card-logo  ">
                            <div class="card-body card_body_logo">
                                <div class="div_logo">
                                    <%= image_tag("logo_google.png", :alt => "google" , class:"img_logo float-left") %>
                                    <%= image_tag("logo_face.png", :alt => "Facebook" , class:"img_logo") %>
                                    <%= image_tag("logo_twitte.png", :alt => "Twitte" , class:"img_logo float-right") %>
                                </div>
                            </div>
                        </div>
                        <div class="mt-3 card content-card-form">
                            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                                <div class="form-group mt-2">
                                    <%= f.label :fname , class:"label_" %><br />
                                    <%= f.text_field :fname, class:"form-control" %>
                                </div>
                                <div class="form-group mt-2">
                                    <%= f.label :lname , class:"label_" %><br />
                                    <%= f.text_field :lname , class:"form-control" %>
                                </div>
                                <div class="form-group mt-2">
                                    <%= f.label :email , class:"label_" %><br />
                                    <%= f.email_field :email, autofocus: true, autocomplete: "email" , class:"form-control" %>
                                </div>
                                <div class="form-group mt-2">
                                    <%= f.label :password , class:"label_" %><br />
                                    <% if @minimum_password_length %>   
                                    <% end %>
                                    <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
                                </div>
                                <div class="form-group mt-2">
                                    <%= f.label :password_confirmation, class:"label_" %><br />
                                    <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"form-control"  %>
                                </div>
                                <div class="picture">
                                    <%= f.file_field :avatar, accept: "image/jpeg, image/gif, image/png, image/jpg" %>
                                </div>
                                <div class="text-center">   
                                    <%= f.submit " Sign up", class:"btn btn-primary " %>
                                </div>
                            <% end %>
                            <%= render "users/shared/error_messages", resource: resource %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-4 col-12 p-0"></div>
    </div>
</div>